@{
    Layout = "_NoHeaderNoFooterLayout"; // Sử dụng layout mới

}





<style>
    /* CSS cho trang đăng nhập */

    body {
        background-color: #f2f2f2;
        font-family: Arial, sans-serif;
        justify-content: center;
        align-items: center;
        margin-top: 150px;
    }

    .container {
        max-width: 450px;
        margin: 0 auto;
        padding: 40px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        height: 300px;
    }

    h2 {
        text-align: center;
        color: #333;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    button {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        margin-top: 20px;
        text-align: center;
    }

    button:hover {
        background-color: #0056b3;
    }
</style>



@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" id="error">@TempData["ErrorMessage"] </div>
}

<script>
    function getCookie(name) {
        var cookies = document.cookie.split('; ');
        for (var i = 0; i < cookies.length; i++) {
            var cookie = cookies[i].split('=');
            if (cookie[0] === name) {
                return cookie[1];
            }
        }
        return null;
    }
